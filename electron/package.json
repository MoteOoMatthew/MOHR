{
  "name": "mohr-hr-system",
  "version": "1.0.0",
  "description": "MOHR - Modular HR Management System - Desktop Application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "start-backend": "cd ../backend && npm start",
    "start-frontend": "cd ../frontend && npm start",
    "build": "npm run build-frontend && electron-builder",
    "build-frontend": "cd ../frontend && npm run build",
    "dist": "npm run build",
    "dist-win": "npm run build-frontend && electron-builder --win --publish=never",
    "dist-mac": "npm run build-frontend && electron-builder --mac --publish=never",
    "dist-linux": "npm run build-frontend && electron-builder --linux --publish=never",
    "pack": "npm run build-frontend && electron-builder --dir",
    "pack-win": "npm run build-frontend && electron-builder --win --dir",
    "pack-mac": "npm run build-frontend && electron-builder --mac --dir",
    "pack-linux": "npm run build-frontend && electron-builder --linux --dir",
    "release": "npm run build-frontend && electron-builder --publish=always"
  },
  "keywords": [
    "hr",
    "human-resources",
    "management",
    "system",
    "electron",
    "desktop",
    "business",
    "employee-management"
  ],
  "author": {
    "name": "MOHR Team",
    "email": "support@mohr-hr.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mohr-hr-system.git"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "electron": "28.0.0",
    "electron-builder": "24.6.4",
    "wait-on": "7.2.0"
  },
  "dependencies": {
    "electron-is-dev": "2.0.0",
    "electron-updater": "6.1.7"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "build": {
    "appId": "com.mohr.hrsystem",
    "productName": "MOHR HR System",
    "copyright": "Copyright Â© 2024 MOHR Team",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../backend/**/*",
      "../frontend/build/**/*",
      "!../backend/node_modules/**/*",
      "!../frontend/node_modules/**/*",
      "!../backend/mohr.db",
      "!**/*.log",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/**/*",
          "!mohr.db",
          "!**/*.log",
          "!**/*.map"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MOHR HR System",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office",
      "desktop": {
        "Name": "MOHR HR System",
        "Comment": "Modular HR Management System",
        "Keywords": "hr;human-resources;management;business;",
        "StartupWMClass": "mohr-hr-system"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "mohr-hr-system",
      "private": false,
      "releaseType": "release"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true
  }
} 