{
  "name": "mohr-hr-system",
  "version": "1.0.0",
  "description": "MOHR HR System - Desktop Application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build-frontend && electron-builder",
    "build-frontend": "cd ../frontend && npm run build",
    "dist": "npm run build-frontend && electron-builder --publish=never",
    "dist-win": "npm run build-frontend && electron-builder --win --publish=never",
    "dist-mac": "npm run build-frontend && electron-builder --mac --publish=never",
    "dist-linux": "npm run build-frontend && electron-builder --linux --publish=never",
    "pack": "npm run build-frontend && electron-builder --dir",
    "pack-win": "npm run build-frontend && electron-builder --win --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.mohr.hrsystem",
    "productName": "MOHR HR System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!../frontend/src",
      "!../frontend/public",
      "!../frontend/package.json",
      "!../frontend/package-lock.json",
      "!../frontend/node_modules",
      "!../backend/src",
      "!../backend/package.json",
      "!../backend/package-lock.json",
      "!../backend/node_modules"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules",
          "!package.json",
          "!package-lock.json",
          "!src",
          "!test"
        ]
      },
      {
        "from": "../frontend/build",
        "to": "frontend/build"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "your-org",
      "repo": "mohr-hr-system"
    },
    "forceCodeSigning": false,
    "electronVersion": "28.0.0"
  },
  "keywords": [
    "hr",
    "management",
    "system",
    "electron",
    "desktop",
    "business"
  ],
  "author": "MOHR Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "26.0.12"
  },
  "dependencies": {
    "electron-is-dev": "2.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
