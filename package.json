{
  "name": "mohr-hr-system",
  "version": "1.0.0",
  "description": "Modular HR Management System with desktop and web interfaces",
  "main": "index.js",
  "scripts": {
    "start": "node scripts/deploy-improved.js development",
    "dev": "node scripts/deploy-improved.js development",
    "local": "node scripts/deploy-improved.js local_network",
    "prod": "node scripts/deploy-improved.js production",
    "electron": "node scripts/deploy-improved.js electron",
    "desktop": "node scripts/deploy-improved.js desktop",
    "build": "node scripts/build-electron.js",
    "build:electron": "node scripts/build-electron.js",
    "build:web": "cd frontend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../electron && npm install",
    "clean": "node scripts/clean.js",
    "test": "echo \"No tests specified\" && exit 0",
    "postinstall": "node scripts/postinstall.js",
    "deploy:remote": "node scripts/deploy-remote.js",
    "deploy:vercel_railway": "node scripts/deploy-remote.js vercel_railway",
    "deploy:digitalocean": "node scripts/deploy-remote.js digitalocean",
    "deploy:vps": "node scripts/deploy-remote.js vps",
    "deploy:list": "node scripts/deploy-remote.js list"
  },
  "keywords": [
    "hr",
    "management",
    "system",
    "electron",
    "react",
    "nodejs",
    "desktop",
    "web",
    "pwa"
  ],
